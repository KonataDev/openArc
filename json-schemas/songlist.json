{
	"id": "arcaea-songlist-v1",
	"description": "Validate legal format of Arcaea songlist file",
	"$schema": "http://json-schema.org/draft-06/schema#",
	"type": "object",
	"title": "Arcaea songlist schema",
	"required": [
		"songs"
	],
	"properties": {
		"songs": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/song_item"
			}
		}
	},
	"definitions": {
		"song_item": {
			"type": "object",
			"required": [
				"id",
				"title_localized",
				"artist",
				"bpm",
				"bpm_base",
				"set",
				"audioPreview",
				"audioPreviewEnd",
				"date",
				"side",
				"bg",
				"difficulties"
			],
			"additionalProperties": false,
			"properties": {
				"id": {
					"type": "string"
				},
				"title_localized": {
					"$ref": "#/definitions/localize_object"
				},
				"artist": {
					"type": "string"
				},
				"bpm": {
					"type": "string"
				},
				"bpm_base": {
					"type": "number",
					"minimum": 0
				},
				"set": {
					"type": "string"
				},
				"purchase": {
					"type": "string"
				},
				"audioPreview": {
					"type": "number",
					"minimum": 0
				},
				"audioPreviewEnd": {
					"type": "number"
				},
				"side": {
					"type": "number",
					"enum": [
						0,
						1
					]
				},
				"bg": {
					"type": "string"
				},
				"bg_daynight": {
					"type": "object",
					"required": [
						"day",
						"night"
					],
					"properties": {
						"day": {
							"type": "string"
						},
						"night": {
							"type": "string"
						}
					}
				},
				"date": {
					"type": "number"
				},
				"version": {
					"type": "string",
					"pattern": "\\d+\\.\\d+"
				},
				"difficulties": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/song_difficulty"
					}
				},
				"world_unlock": {
					"type": "boolean"
				},
				"remote_dl": {
					"type": "boolean"
				},
				"source_copyright": {
					"type": "string"
				},
				"source_localized": {
					"$ref": "#/definitions/localize_object"
				},
				"byd_local_unlock": {
					"type": "boolean"
				},
				"songlist_hidden": {
					"type": "boolean"
				},
				"plusFingers": {
					"type": "boolean"
				},
				"no_pp": {
					"type": "boolean"
				},
				"jacket_localized": {
					"type": "object",
					"patternProperties": {
						"^en|ja|ko|zh-hans|zh-hant$": {
							"type": "boolean"
						}
					}
				}
			}
		},
		"song_difficulty": {
			"type": "object",
			"required": [
				"ratingClass",
				"chartDesigner",
				"jacketDesigner",
				"rating"
			],
			"properties": {
				"ratingClass": {
					"type": "number",
					"minimum": 0,
					"maximum": 3
				},
				"chartDesigner": {
					"type": "string"
				},
				"jacketDesigner": {
					"type": "string"
				},
				"rating": {
					"type": "number",
					"minimum": 0
				},
				"jacketOverride": {
					"type": "boolean"
				},
				"ratingPlus": {
					"type": "boolean"
				},
				"hidden_until_unlocked": {
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"localize_object": {
			"type": "object",
			"required": [
				"en"
			],
			"patternProperties": {
				"^en|ja|ko|zh-Hans|zh-Hant$": {
					"type": "string"
				}
			}
		}
	}
}